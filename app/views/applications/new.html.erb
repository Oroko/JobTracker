<div class="section">
  <div class="container">
    <div class="columns is-centered">
    <div class="column is-4">
      <h2 class="title is-2">New Application for <%= @application.job.title %> - 
      <%= @application.job.company.name %></h2>
      <%= simple_form_for @application do |f| %> 
  
 
        <div class="field">
          <div class="control">
            <%= f.input :date_of_application, 
            
            input_html: { class: "input" },
            wrapper: false,
            label_html: { class: "label" }  %>
          </div>
        </div>
        <%= f.input :job_id, as: :hidden %>
        
      
        <div class="field">
          <div class="control">
            <%= f.button :submit, class: 'button is-info'%>
          </div>
        </div>
      
      <% end %>

    </div>
  </div>
</div>
</div>

