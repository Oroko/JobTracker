

<section class="section"> 
  <div class="container"> 
    <div class="column">

      
      <div class="columns is-centered">
        <div class="column is-4">
          <h2 class="title is-2">My Job Applications </h2>
      </div>
      </div>
    
      <% @applications.each do |application|%>
        <div class="box">
          <article class="media">
            <div class="media-content"> 
              <div class="content">
                <strong><p><%= application.date_of_application %></p></strong>
                <strong><p><%= application.notes %></p></strong><br />
              </div>
            </div>
            <% if user_signed_in?%>
            <nav class="level">
              <div class="level-left is-mobile">
              
                  
                
                <%= link_to application, class: "level-item" do %> 
                  <span class="icon"><i class="fa fa-link" aria-hidden= "true"></i></span>
                <% end %>
                
                  <%= link_to application, method: :delete, data: { confirm: "Are you sure you want to delete this tweet?"} do %>
                    <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                  <%end%>
              </div>
              
            </nav>
            <% end %>
          </article>
        </div>
      <%end%>
    
    </div>
     
  </div>
  
</section>





