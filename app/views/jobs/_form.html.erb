

<%= simple_form_for @job do |f| %> 
  
 
  <div class="field">
    <div class="control">
       <%= f.input :title, 
      
       input_html: { class: "input" },
       wrapper: false,
       label_html: { class: "label" }  %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :url, 
      
       input_html: { class: "input" },
       wrapper: false,
       label_html: { class: "label" } 
       %>
    </div>
  </div>
  <div class="field">
    <div class="control">
       <%= f.input :description, 
       as: :text, 
       
       input_html: { class: "input" },
       wrapper: false,
       label_html: { class: "label" } 
        %>
    </div>
  </div>
  <div class="field">
    <div class="control">
       <%= f.button :submit, class: 'button is-info'%>
    </div>
  </div>
 
<% end %>