

<%= simple_form_for @job do |f| %> 
  
 
  <div class="field">
    <div class="control">
       <%= f.input :title, 
      
       input_html: { class: "input" },
       wrapper: false,
       label_html: { class: "label" }  %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :url, 
      
       input_html: { class: "input" },
       wrapper: false,
       label_html: { class: "label" } 
       %>
    </div>
  </div>
  <div class="field">
    <div class="control">
       <%= f.input :description, 
       as: :text, 
       
       input_html: { class: "input" },
       wrapper: false,
       label_html: { class: "label" } 
        %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.collection_select :company_id,  Company.all, :id, :name,
        input_html: { class: "input" },
        
        wrapper: false,
        label_html: { class: "label" }%>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%=f.simple_fields_for :company do |c| %> 
        <%= c.input :name,
        input_html: { class: "input" },
        wrapper: false,
        label_html: { class: "label" } %>
      <% end %>
    </div>
  </div>
  <div class="field">
    <div class="control">
       <%= f.button :submit, class: 'button is-info'%>
    </div>
  </div>
 
<% end %>