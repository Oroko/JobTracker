<div class="section">
  <div class="container">
  <div class="columns is-centered">
    <div class="column is-4">
      <h2 class="title is-2">
        Sign In
      </h2>
    
     <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      
    <div class="field">
      <div class="control">
        <%= f.input :email,
                required: false,
                autofocus: true,
                wrapper: false,
                label_html: { class: "label" } ,
                input_html: { class: "input" } %>
      
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.input :password,
                required: false,
                wrapper: false,
                label_html: { class: "label" } ,
                input_html: { class: "input" } %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.button :submit, "Sign In", class: "button is-info is-medium"  %>
      </div>
    </div>
    <div class="field">
      <div class="section">
        <%= link_to "Sign up with GitHub", user_github_omniauth_authorize_path,  method: :post, class: "button is-info" %>
      </div>
    </div>
    <br />
    
    <%= render "devise/shared/links" %>
  <% end %>

  
  </div>
   </div>
  </div>
</div>


